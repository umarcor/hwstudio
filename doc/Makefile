build:
	docker run --rm \
	  -v /$(shell pwd)/..://documents/ \
	  asciidoctor/docker-asciidoctor \
	  make -C doc html

html:
	asciidoctor \
	  -r asciidoctor-diagram \
	  index.adoc \
	  --out-file index.html
